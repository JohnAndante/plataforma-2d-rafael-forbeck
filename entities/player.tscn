[sub_resource type="Shader" id="Shader_kdgjc"]
code = "shader_type canvas_item;

// Parâmetros para recuperar a animação
uniform int particles_anim_h_frames = 4;
uniform int particles_anim_v_frames = 1;
uniform float surface_y = 187.0;

varying float v_world_y;

void vertex() {
	// 1. Recupera a posição global (Mundo) da bolha
	v_world_y = (MODEL_MATRIX * vec4(VERTEX, 0.0, 1.0)).y;

	// 2. Lógica essencial de animação por frames
	float h_frames = float(particles_anim_h_frames);
	float v_frames = float(particles_anim_v_frames);
	VERTEX.xy /= vec2(h_frames, v_frames);
	
	float particle_total_frames = h_frames * v_frames;
	float particle_frame = floor(INSTANCE_CUSTOM.z * particle_total_frames);
	particle_frame = clamp(particle_frame, 0.0, particle_total_frames - 1.0);
	
	UV /= vec2(h_frames, v_frames);
	UV += vec2(mod(particle_frame, h_frames) / h_frames, floor((particle_frame + 0.5) / h_frames) / v_frames);
}

void fragment() {
	// 3. Corta a bolha se passar da altura Y
	if (v_world_y < surface_y) {
		discard;
	}
	COLOR = texture(TEXTURE, UV);
}"

